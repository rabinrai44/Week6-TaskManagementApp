@model IEnumerable<TaskManagementApp.Models.TaskList>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IsTaskDone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               
                @Html.CheckBoxFor(modelItem => item.IsTaskDone, new { id=item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @if (!item.IsTaskDone)
                {
                    @Html.DisplayFor(modelItem => item.Description)
                }
                else
                {
                <div class="CompltedTask">
                    @Html.DisplayFor(modelItem => item.Description)
                </div>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/Custom_Scripts/AddCheckBoxListener.js"></script>

