@model TaskManagementApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row mt-5">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card card-rounded-0">
                    <div class="card-header">
                        <h4 class="h3 mb-3 font-weight-normal">Create an new Account</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                <div>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                <div>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                                <div>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <input type="submit" class="btn btn-danger btn-lg btn-block" value="Register" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>>
        </div>
    </div>
</div>


                       

                        @section Scripts {
                            @Scripts.Render("~/bundles/jqueryval")
                        }
